<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <%= label_tag :image, 'Pet\'s Image:' %>
  <%= text_field_tag :image, @pet.image %>

  <%= label_tag :name, 'Pet\'s Name:' %>
  <%= text_field_tag :name, @pet.name %>

  <%= label_tag :sex, 'Pet\'s Sex:' %>
  <%= text_field_tag :sex, @pet.sex %>

  <%= label_tag :age, 'Pet\'s Age:' %>
  <%= text_field_tag :age, @pet.age %>

  <%= label_tag :description, 'Pet Desciption:' %>
  <%= text_area_tag :description, @pet.description %>

  <%= submit_tag 'Update Pet' %>
<% end %>
